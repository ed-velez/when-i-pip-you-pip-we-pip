{
  "name": "When I PiP, you PiP, we PiP",
  "description": "Force Picture-in-Picture mode on any video, on any website, with a single click or keyboard shortcut.",
  "version": "1.0",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "extension.js"
  },
  "action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    },
    "default_title": "When I PiP, you PiP, we PiP"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "manifest_version": 3
}
